#!/usr/bin/env bash

net(){
   st="$(nmcli | awk '/wlp3s0/ {print $4}')"
   inf="$(networkctl status | awk '/Addr/ {print $2}')"
   sn="no connection"
   [[ $inf = "wlp3s0" ]] && {
      st="%{F#0f0}$st%{F-}"
      sn=" $(iwlist wlp3s0 scan | sed -n '5P' |
	 awk -F'=' '{print $3}' | awk -F' ' '{print $1}')"
      ((sn>=-20)) && i="%{F#f30}$sn%{F-}"
      ((sn<=-20)) && i="%{F#890}$sn%{F-}"
      ((sn<=-45)) && i="%{F#4a0}$sn%{F-}"
      ((sn<=-60)) && i="%{F#0f0}$sn%{F-}"
   }
   N="$st$sn"
}

ws() {
   s=($(xprop -root _NET_DESKTOP_NAMES | awk '{$1=$2=""; print $0}' |\
      sed -e 's/,//g' -e 's/\"//g' -e 's/^[[:space:]]*//'))
   c=$(xprop -root _NET_CURRENT_DESKTOP | awk '{print $3}')
   
   for ((i=0;i<${#s[*]};i++)){ 
      [[ "$i" = "$c" ]] && s[$i]="%{F#0f0}[${s[$i]}]%{B-}%{F-}" ||
	 s[$i]="${s[$i]}"
   }
   
   W="$(sed -e 's/\(}\).?\(%\)/\1\2/' <<< "${s[*]}")"
}

out(){
   while read -r line; do
      case $line in
	 net) net ;;
	 'desktop'*) ws ;;
	 *) 
	    B=$(acpi | awk -F', ' 'gsub("Battery 0: ","") {print $1" "$2}')
	    D="$(date '+%a %d %b %H:%M')"
	    R="$(df -h --output="avail" | sed -n '4p')"
	    H="$(df -h --output="avail" | sed -n '9p')"
	    IFS=$'\n' read -rd '' -a ups < <(yay -Qu)
	    U="${#ups[@]}"
	    ;;
      esac
      printf '%s\n' " | $W |%{r}| updates: $U | free: /${R} /home${H} | $B | $N | $D | "
   done
}

printb(){
   cat "$PANELFIFO" | out |
      lemonbar -p ${opt[@]}\
      -g 1366x20\
      -f "ypn envypn:size=10"\
      -o 1\
      -B "$background"\
      -F "$foreground"\
      -u 2 |
      while read line; do eval "$line"; done &
}

main(){
   trap 'bspc config top_padding 0; pkill lemonbar' SIGTERM SIGKILL EXIT
   source /home/ringdal/.cache/wal/colors.sh

   ((updint=10))
   opt=("$@")

   for((;;)){ echo net > "$PANELFIFO"; sleep 30; } &
   for((;;)){ echo > "$PANELFIFO"; sleep $updint; } &

   ws; printb
   wait
}

main "$@"

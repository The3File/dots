#!/usr/bin/env bash

fz(){
   fzf --ansi -0 -1 -q "$1"\
   --preview "bat -l bash --theme='OneHalfDark'\
   --style=numbers,changes --color always {}"
}

print_files(){ printf '%s\n' "${files[@]#*${HOME##*/}/}"; }

main(){
   dir=( "$HOME/.Scripts/" "$HOME/.bin/" )
   files=($(fd -c always -d 1 -t x . "${dir[@]}" ))
   file=$(print_files | fz "$1")
   [[ $file ]] && nvim "$HOME/$file"
}

main "$@"
